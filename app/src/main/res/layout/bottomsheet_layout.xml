                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/kalpurush"
                                android:text="ওয়েবসাইটঃ- উইকিপিডিয়া, মুক্ত বিশ্বকোষ থেকে"
